<?xml version="1.0"?>
<launch>

<!-- Load joint controller configurations from YAML file to parameter server -->
<rosparam file="$(find model_description)/launch/controller.yaml" command="load"/>

<!-- load the controllers -->
<node args="rev1_position_controller 
            rev2_position_controller 
            rev3_position_controller 
            rev6_position_controller joint_state_controller " 
            name="controller_spawner" ns="/model" output="screen" pkg="controller_manager" respawn="false" type="spawner"/>

<!-- convert joint states to TF transforms for rviz, etc -->
<node name="robot_state_publisher" output="screen" pkg="robot_state_publisher" respawn="false" type="robot_state_publisher">
  <remap from="/joint_states" to="/model/joint_states"/> 
</node>

</launch>